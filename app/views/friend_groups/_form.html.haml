= simple_form_for([current_user, @friend_group], :html => {:remote => true, :class => "modal #{'hide'  if request.xhr?}"} ) do |f|
  .modal-header
    %button{ :type => "button", :class => "close",  :'data-dismiss' => "modal"} Ã—
    %h3.row
      .span2
        = "#{ f.object.new_record? ? 'New' : 'Edit'}"
        Friend Group
  .modal-body
    = f.error_notification
    .form-inputs
    = f.input :name
  .modal-footer
    = link_to('Close', '#', :class => 'btn', :'data-dismiss' => 'modal')
    = f.button :submit, :class => 'btn btn-primary'
    - if f.object.persisted?
      = link_to('Destroy', [current_user, @friend_group], :class => 'btn btn-danger', :confirm => 'Are you sure you want to destroy this Group?', :method => :delete)


