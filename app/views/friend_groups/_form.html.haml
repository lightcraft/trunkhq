= simple_form_for([current_user, @friend_group], :html => {:remote => true, :class => "modal #{'hide'  if request.xhr?}"} ) do |f|
  .modal-header
    %button{ :type => "button", :class => "close",  :'data-dismiss' => "modal"} Ã—
    %h3
      = "#{ f.object.new_record? ? 'New' : 'Edit'}"
      Group
  .modal-body
    = f.error_notification
    .row
      .span2= f.input(:name, :placeholder => 'calls', :label => 'Group title', :input_html => {  :class => 'input-small'})
      .span2= f.input(:calls_per_hour, :type => "number", :placeholder => 'calls', :label => 'Calls/hour', :input_html => {  :class => 'input-small'})
    .row
      .span2= f.input(:min_duration_sec, :type => "number", :placeholder => 'min sec', :label => 'Min duration sec', :input_html => {  :class => 'input-small'})
      .span2= f.input(:max_duration_sec, :type => "number", :placeholder => 'max sec', :label => 'Max duration sec', :input_html => {  :class => 'input-small'})



  .modal-footer
    = link_to('Close', '#', :class => 'btn', :'data-dismiss' => 'modal')
    = f.button :submit, :class => 'btn btn-primary'
    - if f.object.persisted?
      = link_to('Destroy', [current_user, @friend_group], :class => 'btn btn-danger', :confirm => 'Are you sure you want to destroy this Group?', :method => :delete)


