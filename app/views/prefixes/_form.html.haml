= simple_form_for(@prefix, :html => {:remote => true, :class => "modal #{'hide'  if request.xhr?}"} ) do |f|
  .modal-header
    %button{ :type => "button", :class => "close",  :'data-dismiss' => "modal"} Ã—
    %h3.row
      .span2
        = "#{ f.object.new_record? ? 'New' : 'Edit'}"
        Prefix
  .modal-body
    = f.error_notification
    .form-inputs
      = f.association :prefix_group, :label_method => :group_name
      = f.association :prefix_groups_for_provider, :label_method => :group_name
      = f.input :prefix

  .modal-footer
    = link_to('Close', '#', :class => 'btn', :'data-dismiss' => 'modal')
    = f.button :submit, :class => 'btn btn-primary'
    - if f.object.persisted?
      = link_to('Desttroy', @prefix_group , :class => 'btn btn-danger', :confirm => 'Are You sure? to destroy this Group?', :method => :delete)